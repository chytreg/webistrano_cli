#!/usr/bin/env ruby
require 'rubygems'

# Set up gems listed in the Gemfile.
ENV['BUNDLE_GEMFILE'] = File.expand_path('../../Gemfile', __FILE__)
require 'bundler'
Bundler.setup
require 'slop'
require 'webistrano_cli'

# parse assumes ARGV, otherwise you can pass it your own Array
opts = Slop.new :help => true do
  banner 'Usage: webistrano_cli -p project_name'
  description 'command allow to deploy projects from webistrano'
  on :p, :project, 'Project name', true
  on :s, :stage, 'Stage', true
  on :t, :task, 'Task', true
  on :v, :version, 'Print the version' do
    puts 'Version 0.0.1'
  end
end
begin
  opts.parse
  WebistranoCli.deploy(opts.to_hash) and return if opts.p?
  puts(opts.help) unless opts.v?
rescue Slop::Error => ex
  puts ex.message
end
